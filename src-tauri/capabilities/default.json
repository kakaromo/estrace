{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "os:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    "shell:default"
  ]
}